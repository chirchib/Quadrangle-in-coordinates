#include <iostream>
#include <math.h>
using namespace std;


class Rectangle {
	public:
		Rectangle() {
			length = 1;
			width = 1;
		}
		
		void setCoordinates() {
			int x, y;
			cout << "Set x and y for A" << endl;
			cin >> x >> y;
			Ax = x; 
			Ay = y;
			cout << "Set x and y for B" << endl;
			cin >> x >> y;
			Bx = x; 
			By = y;
			cout << "Set x and y for C" << endl;
			cin >> x >> y;
			Cx = x; 
			Cy = y;
			cout << "Set x and y for D" << endl;
			cin >> x >> y;
			Dx = x; 
			Dy = y;
		}	
		
		void getSides() {
			if (checkingRectangle() == true) {
				findingSides();
				cout << "ABCD - is restangle" << endl;
				square();
				cout << "Length of rectangle is - " << length << endl;
				cout << "Width of rectangle is - " << width << endl;	
			}
			else
				cout << "ABCD - isn't 'restangle" << endl;		
		}
		
		void square() {
			if (length == width)
				cout << "ABCD - square" << endl;			
		}
			
/*		void setParametres() {
			double lengthA, widthA;
			cout << "Enter length " << endl;
			cin >> lengthA;
			cout << "Enter width " << endl;
			cin >> widthA;
			length = lengthA;
			width = widthA;
			checking();			
		}
		
		void checking() {
			if ((1.0 <= length) && ( length  <= 20.0) && (1.0 <= width) && (width <= 20.0))
				return;
			else 
				setParametres();
		} */
		
		void perimetr() {
			double perimetr;
			perimetr = 2*(length + width);
			cout << "Perimetr = " << perimetr << endl;
		}
		
		void area() {
			double area;
			area = length * width;
			cout << "Area = " << area << endl;
		}
		
		void fullInformation() {
			setCoordinates();
	        findingSides();
	        getSides();
	        perimetr();
	        area();
		}
	private:
		double length, width;
		int Ax, Ay;
		int Bx, By;
		int Cx, Cy;
		int Dx, Dy;
		
		bool checkingRectangle() {
			if	(((Bx-Ax)*(Cx-By) + (By-Ay)*(Cy-By) == 0) && ((Cx-Bx)*(Dx-Cx) + (Cy-By)*(Dy-Cy) == 0) && ((Dx-Cx)*(Ax-Dx) + (Dy-Cy)*(Ay-Dy) == 0) && ((Ax-Dx)*(Bx-Ax) + (Ay-Dy)*(By-Ay) == 0))
				return true;
			else
				return false;
		}
		
		void findingSides() {
			double lengthA;
			double widthA;
			if (checkingRectangle() == true) {
				lengthA = sqrt((Bx-Ax)^2 + (By-Ay)^2);
				widthA = sqrt((Cx-Bx)^2 + (Cy-By)^2);
				if (lengthA > widthA) {
					length = lengthA;
					width = widthA;
				}	
				if (lengthA < widthA) {
					length = widthA;
					width = lengthA;
				}

				if (lengthA == widthA) {
					length = lengthA;
					width = length;
				}	
			}
			else {
				length = 0;
				width = 0;	
			}
		} 
		
};


int main() {
	
	Rectangle test;
	test.fullInformation();	
	
}
